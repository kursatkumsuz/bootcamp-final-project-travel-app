<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedImageShape">
        <item name="cornerSize">@dimen/_6sdp</item>
    </style>

    <style name="BottomRoundedImageShape">
        <item name="cornerSizeBottomLeft">@dimen/_32sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_32sdp</item>
    </style>

    <style name="CustomTabLayout" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabSelectedTextColor">#FF4760</item>
        <item name="tabTextColor">@color/tab_color</item>
        <item name="tabIndicatorColor">@color/selected_tab_color</item>
        <item name="tabTextAppearance">@style/TabText</item>
    </style>

    <style name="TabText" parent="@style/Widget.AppCompat.TextView">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>