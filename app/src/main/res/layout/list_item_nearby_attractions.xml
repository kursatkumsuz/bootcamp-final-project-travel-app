<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp"
        android:layout_margin="@dimen/_10sdp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/nearbyImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedImageShape"
            tools:src="@drawable/pic_home_screen" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_color"/>

        <TextView
            android:id="@+id/nearbyTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_minus15sdp"
            android:fontFamily="@font/source_sans_pro"
            android:textColor="#ffffff"
            android:textSize="@dimen/_25ssp"
            android:textStyle="bold"
            android:layout_gravity="center"
            tools:text="@string/title" />

        <TextView
            android:id="@+id/nearbySubText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro"
            android:layout_marginTop="@dimen/_12sdp"
            android:textColor="#FCFCFD"
            android:textSize="@dimen/_18ssp"
            android:layout_gravity="center"
            tools:text="@string/title" />

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            app:cardCornerRadius="@dimen/_2sdp"
            app:cardBackgroundColor="#FF4760">

            <TextView
                android:id="@+id/nearbyTypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/type"
                android:textColor="#ffffff"
                android:fontFamily="@font/source_sans_pro"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="@dimen/_10ssp" />
        </androidx.cardview.widget.CardView>

        <ImageButton
            android:id="@+id/nearbyBookmarkButton"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_bookmark"
            app:layout_constraintEnd_toEndOf="@+id/nearbyImageView"
            app:layout_constraintTop_toTopOf="@+id/nearbyImageView" />

    </com.google.android.material.card.MaterialCardView>

</layout>